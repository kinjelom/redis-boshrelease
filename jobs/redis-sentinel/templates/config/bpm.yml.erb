<%-
open_files = 12500
link("redis").if_p("redis.maxclients") do |maxclients|
  if maxclients.to_i > 0
    open_files = (maxclients.to_i * 5) / 4
  end
end
-%>
---
processes:
- name: redis-sentinel
  executable: /var/vcap/packages/redis/bin/redis-server
  args: [ /var/vcap/data/redis-sentinel/config/sentinel.conf, --sentinel ]
  ephemeral_disk: true
  hooks:
    pre_start: /var/vcap/jobs/redis-sentinel/bin/pre_start.sh 
  limits:
    open_files: <%= open_files %>
